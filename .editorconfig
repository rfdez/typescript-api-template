root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown Files
[*.{md,mdx}]
indent_style = space
trim_trailing_whitespace = false
