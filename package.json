{
	"name": "typescript-api-template",
	"version": "0.1.0",
	"description": "TypeScript API Template with linter, formatter, and testing configured",
	"keywords": [
		"typescript",
		"api",
		"template",
		"starter",
		"starter-template",
		"starter-template-typescript",
		"starter-template-typescript-api",
		"linter",
		"formatter",
		"test",
		"testing"
	],
	"homepage": "https://github.com/rfdez/typescript-api-template#readme",
	"bugs": {
		"url": "https://github.com/rfdez/typescript-api-template/issues"
	},
	"license": "MIT",
	"author": "Raúl Fernández",
	"repository": {
		"type": "git",
		"url": "https://github.com/rfdez/typescript-api-template.git"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"private": true,
	"main": "dist/src/app/server.js",
	"scripts": {
		"dev": "NODE_ENV=development nodemon src/app/server.ts",
		"build": "tsc",
		"start": "NODE_ENV=production node dist/src/app/server.js",
		"test": "NODE_ENV=test jest",
		"lint": "eslint --ignore-path .gitignore .",
		"lint:fix": "eslint --ignore-path .gitignore --fix ."
	},
	"dependencies": {
		"compression": "1.7.4",
		"cors": "2.8.5",
		"express": "4.18.2",
		"helmet": "7.0.0"
	},
	"devDependencies": {
		"@jest/globals": "29.7.0",
		"@swc/core": "1.3.92",
		"@swc/jest": "0.2.29",
		"@types/compression": "1.7.3",
		"@types/cors": "2.8.14",
		"@types/express": "4.17.18",
		"@types/node": "20.8.9",
		"@types/supertest": "2.0.14",
		"@typescript-eslint/eslint-plugin": "6.7.3",
		"@typescript-eslint/parser": "6.7.3",
		"eslint": "8.51.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-plugin-editorconfig": "4.0.3",
		"eslint-plugin-import": "2.28.1",
		"eslint-plugin-prettier": "5.0.0",
		"eslint-plugin-simple-import-sort": "10.0.0",
		"eslint-plugin-unused-imports": "3.0.0",
		"jest": "29.7.0",
		"nodemon": "3.0.1",
		"prettier": "3.0.3",
		"supertest": "6.3.3",
		"ts-node": "10.9.1",
		"typescript": "5.2.2"
	}
}
